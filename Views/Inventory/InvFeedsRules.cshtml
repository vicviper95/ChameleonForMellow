@*@page "/Inventory/edit/{id}"*@
@model Chameleon.DTOs.Inventory.GetInventoryFeedMarketRule

@{
  ViewData["Title"] = "Edit";
  Layout = "~/Views/Shared/_Layout.cshtml";
}


<br />
<h2 class="text-info"> Updating Feeding Rules</h2>
<br />

<div class="border container" style="padding:30px;">
  <h4>@Model.CustomerName</h4>
  <br />
  @*<div class="border container" style="padding:30px;">
    <h6>Import SKU List</h6>
    <input type="file" class="file" id="SKUCSVAttachment"  onclick="openSKUCSVAttachment()"/> 
  </div>*@
  <form method="post" asp-controller="Inventory" asp-action="mainsl_banc_feeds_rules">
    <input type="hidden" asp-for="InvFeedRuleId" />
    <input type="hidden" asp-for="CustomerId" id="customerId"/>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-check row">
      <div class="col-3">
        <input asp-for="IsActivated" class="form-check-input" type="checkbox" />
      </div>
      <div class="col-6">
        <label asp-for="IsActivated">Activated</label>
      </div>
      <span asp-validation-for="IsActivated" class="text-danger"></span>
    </div>

    <div class="form-group row">
      <div class="col-sm-3">
        <label asp-for="ZeroOutAt">Zero Out At</label>
      </div>
      <div class="col-sm-6">
        <input asp-for="ZeroOutAt" class="form-control" />
        <span asp-validation-for="ZeroOutAt" class="text-danger"></span>
      </div>
    </div>
    <br />
    <div class="form-group row">
      <div class="col-sm-3">
        <label asp-for="CustomFeedRatioText">Custom Ratio</label>
      </div>
      <div class="col-sm-6">
        <input asp-for="CustomFeedRatioText" class="form-control" />
        <span asp-validation-for="CustomFeedRatioText" class="text-danger"></span>
      </div>
    </div>
    <br />
    <div class="form-group row">
      <div class="col-3 offset-3">
        <button type="submit" value="Update" class="btn btn-primary form-control">Update</button>
      </div>
      <div class="col-3">
        @*<a asp-page="/Index" class="btn btn-success form-control">Back to List</a>*@
        <a asp-controller="Inventory" asp-action="InvFeedsSetting" class="btn btn-success form-control">Back to List</a>
      </div>
    </div>

  </form>
  @*For Test Purpose only!*@
  @*<textarea id="resultJSON" name="resultJSON" rows="5" cols="50">
</textarea>*@

</div>


@section Scripts {
  @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
  <script>
    function lastmod() { }
  </script>
  <script src="~/js/InvFeedsMarketSKUListImport.js">
  </script>
}